<div class="favesContainer">

    <div class="text-center matchHeader">
        <h1>Your saved buddies!</h1>
    </div>

    {{!-- NEED A #EACH to render these cards, delete dummy code after first one --}}
    <div class="topMatches">

{{!-- DRAFT OF DYNAMIC HBS CREATION --}}
{{#each favorites}}
<div class="card matchCard textFade" style="width: 18rem;">
    <img src="{{this.photo}}" class="card-img-top" alt="Match Photo">

    {{!-- <i data-id="{{this.id}}" id="favorite" class="favoriteButton far fa-star"></i> --}}

    <div class="card-body cardInfo">
        <p class="card-text">{{this.first_name}} {{this.last_name}}</p>
        <p class="card-text">Username: {{this.username}}</p>
        <p class="card-text"><a href="mailto:{{this.email}}">Email: {{this.email}}</a></p>
        <p class="card-text">Located: {{this.location}}</p>
    </div>
</div>
{{/each}}
</div>

