{{!-- TOP MATCHES SECTION --}}
<div class="matchContainer">

    <div class="text-center matchHeader">
        <h5>Based on your survey, here are your</h5>
        <h1 class="brown">Top Buddies!</h1>
        <br>
    </div>

    <div class="container topMatches">
        {{#each matches}}
        <div class="card matchCard textFade" class="card matchCard textFade" style="width: 18rem;">
            <img src="{{this.photo}}" class="card-img-top" alt="Match Photo">

            <i data-id="{{this.id}}" id="favorite" class="favoriteButton far fa-star"
                data-content="Click to favorite this buddy!" rel="popover" data-placement="bottom"
                data-trigger="hover"></i>

            <div class="card-body cardInfo">
                <p class="card-text cardName"><strong>{{this.first_name}} {{this.last_name}}</strong></p>
                <p class="card-text"><i class="fas fa-user brown"> : </i> {{this.username}}</p>
                <p class="card-text email" data-content="Click to get in touch!" rel="popover" data-placement="top"
                    data-trigger="hover"><a href="mailto:{{this.email}}"><i class="fas fa-envelope brown"> : </i>
                        {{this.email}}</a></p>
                <p class="card-text"><i class="fas fa-location-arrow brown"> : </i> {{this.location}}</p>
            </div>
        </div>
        {{/each}}

        {{#unless matches}}
        <p>Sorry! Looks like we couldn't find a close enough match. Please see other recommended buddies
            below!</p>
        {{/unless}}


    </div>

</div>


<div class="moreMatchesContainer">

    <div class="text-center matchHeader">
